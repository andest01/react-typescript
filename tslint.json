{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-eslint-rules",
        "tslint-sonarts",
        "tslint-immutable"
    ],
    "rules": {
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "ban": false,
        "class-name": true,
        "cognitive-complexity": [
            true,
            10
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "jsdoc-format": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "label-position": true,
        "object-literal-sort-keys": false,
        "no-var-requires": false,
        "max-file-line-count": [
            true,
            200
        ],
        "max-line-length": [
            true,
            120
        ],
        "mccabe-complexity": [
            true,
            15
        ],
        "member-ordering": [
        true,
        {
            "order": [
                "public-static-field",
                "public-instance-field",
                "public-constructor",
                "private-static-field",
                "private-instance-field",
                "private-constructor",
                "public-instance-method",
                "protected-instance-method",
                "private-instance-method"
            ]
        }
        ],
        "missing-jsdoc": false,
        "no-accessor-field-mismatch": true,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": true,
        "no-console": [
            true,
            "log",
            "error",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-let": true,
        "no-method-signature": true,
        "no-object-mutation": true,
        "no-parameter-reassignment": true,
        "no-redundant-parentheses": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "no-useless-cast": true,
        "no-var-keyword": true,
        "object-curly-spacing": [
            true,
            "always"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "radix": true,
        "readonly-array": [
            true,
            "ignore-local"
        ],
        "readonly-keyword": [
            true,
            "ignore-local"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "switch-default": true,
        "ter-arrow-parens": false,
        "ter-arrow-spacing": true,
        "no-default-export": false,
        "trailing-comma": [
            false
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef": [
            true,
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "use-type-alias": true,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "react-tsx-curly-spacing": false,
        "no-relative-imports": false,
        "no-import-side-effect": [true, {"ignore-module": "(\\.html|\\.css|\\.scss)$"}],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-rest-spread",
            "check-type-operator",
            "check-preblock"
        ]
    }
}
